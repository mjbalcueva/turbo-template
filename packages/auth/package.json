{
	"name": "@repo/auth",
	"version": "0.0.1",
	"description": "Framework-agnostic Better Auth package with shared configuration and instance.",
	"author": "",
	"private": true,
	"license": "UNLICENSED",
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./dist/index.js"
		}
	},
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch",
		"format": "prettier --write \"src/**/*.ts\"",
		"lint": "eslint --flag unstable_native_nodejs_ts_config \"src/**/*.ts\" --fix",
		"typecheck": "tsc --noEmit",
		"generate": "better-auth generate"
	},
	"dependencies": {
		"@repo/db": "workspace:*",
		"better-auth": "catalog:"
	},
	"devDependencies": {
		"@repo/eslint-config": "workspace:*",
		"@repo/prettier-config": "workspace:*",
		"@repo/tsconfig": "workspace:*",
		"@types/node": "catalog:",
		"eslint": "catalog:",
		"prettier": "catalog:",
		"typescript": "catalog:"
	},
	"prettier": "@repo/prettier-config"
}
